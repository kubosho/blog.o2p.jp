# the following line to use "https"
source 'https://rubygems.org'

gem 'middleman'
gem 'middleman-blog'
gem 'middleman-syntax'
gem 'redcarpet'
gem 'travis'

# For Heroku
gem 'rake'
gem "rack-contrib"
gem "puma"

# For feed.xml.builder
gem 'builder'
gem 'compass', '~> 0.12.4'
gem 'slim'
gem 'susy'
